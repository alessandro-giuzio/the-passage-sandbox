---
import '../styles/global.css';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />

    <link
      href='https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@400;500;600;700&family=Sora:wght@400;500;600;700&family=DM+Serif+Display:ital@0;1&family=DM+Sans:wght@400;500;600;700&display=swap'
      rel='stylesheet'
    />
    <title>The Passage — Sandbox</title>
  </head>
  <body class='min-h-screen bg-(--tp-bg) text-(--tp-text)'>
    <nav class='mx-auto max-w-6xl px-4 pt-6 md:px-6'>
      <div class='flex flex-wrap items-center gap-2 text-sm'>
        <a
          href='/'
          class='rounded-lg border border-(--tp-border) bg-(--tp-surface) px-3 py-2 hover:bg-(--tp-surface-2)'>
          Tipografía
        </a>
        <a
          href='/home'
          class='rounded-lg border border-(--tp-border) bg-(--tp-surface) px-3 py-2 hover:bg-(--tp-surface-2)'>
          Mock Home
        </a>
      </div>
    </nav>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
